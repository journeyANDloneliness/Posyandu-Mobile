<?xml version='1.0' encoding='utf-8'?>
<widget id="custom.project.id" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Posyandu-Mobile</name>
    <description>
        Posyandu-Mobile adalah aplikasi untuk membantu pendaataan di posyandu
    </description>
    <author email="ciciksantosa@gmail.com" href="">
        Achmia
    </author>
    <content src="index.html" />
    <icon src="res/p.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
